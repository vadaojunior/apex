// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
  engineType      = "wasm"
}

datasource db {
  provider = "sqlite"
}





model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  name      String
  role      String   @default("ADMIN")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Client {
  id        String   @id @default(cuid())
  name        String
  cpf         String?  @unique
  phone       String?
  email       String?
  govPassword String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  services    ClientService[]
  sales       Sale[]
  receivables Receivable[]
  payables    Payable[]

  @@index([name])
}

model Service {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  price       Int?     // In cents
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  clients     ClientService[]
  saleItems   SaleItem[]
  expenseTemplates ServiceExpenseTemplate[]
}

model ClientService {
  id        String   @id @default(cuid())
  clientId  String
  serviceId String
  status    String   @default("PENDING")
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  client    Client   @relation(fields: [clientId], references: [id])
  service   Service  @relation(fields: [serviceId], references: [id])
}

model Sale {
  id          String   @id @default(cuid())
  clientId    String
  totalAmount Int      // In cents
  discount    Int      @default(0) // In cents
  date        DateTime @default(now())
  status      String   @default("COMPLETED") // COMPLETED, CANCELLED
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  client      Client   @relation(fields: [clientId], references: [id])
  items       SaleItem[]
  receivables Receivable[]

  @@index([date])
}

model SaleItem {
  id          String   @id @default(cuid())
  saleId      String
  serviceId   String
  quantity    Int      @default(1)
  unitPrice   Int      // In cents
  totalPrice  Int      // In cents
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  sale        Sale     @relation(fields: [saleId], references: [id])
  service     Service  @relation(fields: [serviceId], references: [id])
}

model Receivable {
  id               String   @id @default(cuid())
  saleId           String?
  clientId         String
  description      String
  amount           Int      // Total amount in cents
  receivedAmount   Int      @default(0)
  dueDate          DateTime
  status           String   @default("OPEN") // OPEN, PAID, OVERDUE, CANCELLED
  paymentMethod    String   // CASH, BOLETO, CREDIT_CARD
  
  // Credit Card fields
  installments     Int      @default(1)
  cardTaxPercent   Float?   @default(0)
  cardTaxFixed     Int?     @default(0)
  netAmount        Int?     // amount - taxes
  
  // Boleto / Future Integration fields
  provider          String?
  externalId        String?
  linhaDigitavel    String?
  barcode           String?
  statusProvider    String?
  payloadWebhook    String?  // JSON stringified
  
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  sale             Sale?    @relation(fields: [saleId], references: [id])
  client           Client   @relation(fields: [clientId], references: [id])
  paymentRecords   PaymentRecord[]

  @@index([status])
  @@index([dueDate])
}

model PaymentRecord {
  id           String   @id @default(cuid())
  receivableId String
  amount       Int      // In cents
  date         DateTime @default(now())
  notes        String?
  createdAt    DateTime @default(now())

  receivable   Receivable @relation(fields: [receivableId], references: [id])
}

model ExpenseCategory {
  id          String    @id @default(cuid())
  name        String    @unique
  color       String    @default("#6b7280") // Default gray
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  payables    Payable[]
  templates   ServiceExpenseTemplate[]
}

model ServiceExpenseTemplate {
  id          String   @id @default(cuid())
  description String
  amount      Int      @default(0) // Default estimated cost in cents
  
  serviceId   String
  service     Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  
  categoryId  String
  category    ExpenseCategory @relation(fields: [categoryId], references: [id])
}

model Payable {
  id                String   @id @default(cuid())
  description       String
  
  clientId          String
  client            Client   @relation(fields: [clientId], references: [id])
  
  categoryId        String
  category          ExpenseCategory @relation(fields: [categoryId], references: [id])
  
  amount            Int      // In cents
  dueDate           DateTime
  status            String   @default("OPEN") // OPEN, PAID, OVERDUE, CANCELLED
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([status])
  @@index([dueDate])
  @@index([categoryId])
}

model FinancialConfig {
  id        String   @id @default(cuid())
  key       String   @unique // card_tax_percent, card_tax_fixed, etc.
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  action    String   // LOGIN, LOGOUT, CHANGE_PASSWORD, CREATE, UPDATE, DELETE, etc.
  resource  String   // CLIENT, SERVICE, RECEIVABLE, PAYABLE, etc.
  details   String?
  ip        String?
  userAgent String?
  entityId  String?
  oldValue  String?  // JSON string
  newValue  String?  // JSON string
  createdAt DateTime @default(now())

  @@index([createdAt])
  @@index([action])
  @@index([resource])
}

model ProviderWebhook {
  id          String   @id @default(cuid())
  provider    String   // e.g., STRIPE, ASAAS, PAGSEGURO
  externalId  String?
  payload     String   // Full JSON payload
  status      String   @default("RECEIVED") // RECEIVED, PROCESSED, ERROR
  error       String?
  createdAt   DateTime @default(now())

  @@index([externalId])
  @@index([createdAt])
}

