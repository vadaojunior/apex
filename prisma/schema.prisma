// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}





model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  name      String
  role      String   @default("ADMIN")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Client {
  id        String   @id @default(cuid())
  name      String
  cpf       String?  @unique
  phone     String?
  email     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  services    ClientService[]
  sales       Sale[]
  receivables Receivable[]
}

model Service {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  price       Int?     // In cents
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  clients     ClientService[]
  saleItems   SaleItem[]
}

model ClientService {
  id        String   @id @default(cuid())
  clientId  String
  serviceId String
  status    String   @default("PENDING")
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  client    Client   @relation(fields: [clientId], references: [id])
  service   Service  @relation(fields: [serviceId], references: [id])
}

model Sale {
  id          String   @id @default(cuid())
  clientId    String
  totalAmount Int      // In cents
  discount    Int      @default(0) // In cents
  date        DateTime @default(now())
  status      String   @default("COMPLETED") // COMPLETED, CANCELLED
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  client      Client   @relation(fields: [clientId], references: [id])
  items       SaleItem[]
  receivables Receivable[]
}

model SaleItem {
  id          String   @id @default(cuid())
  saleId      String
  serviceId   String
  quantity    Int      @default(1)
  unitPrice   Int      // In cents
  totalPrice  Int      // In cents
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  sale        Sale     @relation(fields: [saleId], references: [id])
  service     Service  @relation(fields: [serviceId], references: [id])
}

model Receivable {
  id               String   @id @default(cuid())
  saleId           String?
  clientId         String
  description      String
  amount           Int      // Total amount in cents
  receivedAmount   Int      @default(0)
  dueDate          DateTime
  status           String   @default("OPEN") // OPEN, PAID, OVERDUE, CANCELLED
  paymentMethod    String   // CASH, BOLETO, CREDIT_CARD
  
  // Credit Card fields
  installments     Int      @default(1)
  cardTaxPercent   Float?   @default(0)
  cardTaxFixed     Int?     @default(0)
  netAmount        Int?     // amount - taxes
  
  // Boleto / Future Integration fields
  provider          String?
  externalId        String?
  linhaDigitavel    String?
  barcode           String?
  statusProvider    String?
  payloadWebhook    String?  // JSON stringified
  
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  sale             Sale?    @relation(fields: [saleId], references: [id])
  client           Client   @relation(fields: [clientId], references: [id])
  paymentRecords   PaymentRecord[]
}

model PaymentRecord {
  id           String   @id @default(cuid())
  receivableId String
  amount       Int      // In cents
  date         DateTime @default(now())
  notes        String?
  createdAt    DateTime @default(now())

  receivable   Receivable @relation(fields: [receivableId], references: [id])
}

model Payable {
  id                String   @id @default(cuid())
  description       String
  category          String
  amount            Int      // In cents
  dueDate           DateTime
  status            String   @default("OPEN") // OPEN, PAID, OVERDUE, CANCELLED
  isRecurring       Boolean  @default(false)
  recurrenceInterval String? // Monthly, etc.
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model FinancialConfig {
  id        String   @id @default(cuid())
  key       String   @unique // card_tax_percent, card_tax_fixed, etc.
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  action    String
  resource  String
  details   String?
  createdAt DateTime @default(now())
}

